---
import dayjs from 'dayjs'
import { getCollection, render } from 'astro:content'
import { Image } from 'astro:assets'
import Layout from '@/layouts/Layout.astro'
import PostNavigation from '@/components/post-navigation'
import ScrollToTopButton from '@/components/scroll-to-top-button'
import Toc from '@/components/toc'
import SideToc from '@/components/side-toc'
import { Avatar } from '@/components/ui/avatar'
import { Badge } from '@/components/ui/badge'
import { Separator } from '@/components/ui/separator'
import {
  Breadcrumb,
  BreadcrumbItem,
  BreadcrumbLink,
  BreadcrumbList,
  BreadcrumbPage,
  BreadcrumbSeparator
} from '@/components/ui/breadcrumb'
import { Home, BookOpen } from 'lucide-astro'

export async function getStaticPaths() {
  const posts = await getCollection('blog')
  const sortedPosts = posts.sort((a, b) => {
    return b.data.date.getTime() - a.data.date.getTime()
  })
  return sortedPosts.map(post => {
    const postIndex = sortedPosts.indexOf(post)
    const prevPost = (() => {
      if (postIndex <= 0) return null
      return sortedPosts.at(postIndex - 1)?.data ?? null
    })()
    const nextPost = (() => {
      if (postIndex >= sortedPosts.length - 1) return null
      return sortedPosts.at(postIndex + 1)?.data ?? null
    })()
    return {
      params: { slug: post.data.slug },
      props: { post, prevPost, nextPost }
    }
  })
}

const { post, prevPost, nextPost } = Astro.props
const { Content, headings } = await render(post)
---

<Layout title={post.data.title} description={post.data.description}>
  <section
    class='grid grid-cols-[minmax(0px,1fr)_min(768px,100%)_minmax(0px,1fr)] gap-y-6 *:px-5'
  >
    <Breadcrumb className='col-start-2'>
      <BreadcrumbList>
        <BreadcrumbItem>
          <BreadcrumbLink href='/' aria-label='Home'>
            <Home className='size-4' />
          </BreadcrumbLink>
        </BreadcrumbItem>
        <BreadcrumbSeparator />
        <BreadcrumbItem>
          <BreadcrumbLink href='/blog/1' className='flex items-center gap-2'>
            <BookOpen className='size-4' />
            <span>Blog</span>
          </BreadcrumbLink>
        </BreadcrumbItem>
        <BreadcrumbSeparator />
        <BreadcrumbItem>
          <BreadcrumbPage>
            <span>{post.data.title}</span>
          </BreadcrumbPage>
        </BreadcrumbItem>
      </BreadcrumbList>
    </Breadcrumb>
    <div class='col-span-full mx-auto w-full max-w-[1000px]'>
      <div class='relative aspect-video'>
        <Image
          src={post.data.cover}
          alt={post.data.title}
          class='absolute inset-0 w-full h-full rounded-xl object-cover'
          inferSize
          loading='eager'
        />
      </div>
    </div>
    <header class='col-start-2 flex flex-col gap-y-4'>
      <h1 class='text-pretty text-3xl font-bold text-center sm:text-4xl'>
        {post.data.title}
      </h1>
      <div
        class='flex flex-wrap items-center justify-center gap-2 text-sm text-muted-foreground'
      >
        <div class='flex items-center gap-x-1.5'>
          <Avatar className='size-5 flex items-center justify-center bg-muted'>
            C
          </Avatar>
          <span>朝小树</span>
        </div>
        <Separator orientation='vertical' className='h-4' />
        <span>{dayjs(post.data.date).format('YYYY/MM/DD')}</span>
      </div>
      <div class='flex flex-wrap justify-center gap-2'>
        {
          post.data.tags.map(tag => (
            <Badge variant='secondary' className='rounded-full font-normal'>
              # {tag}
            </Badge>
          ))
        }
      </div>
    </header>
    <PostNavigation
      className='col-start-2 px-5'
      client:load
      previousPost={prevPost}
      nextPost={nextPost}
    />
    <Toc client:load className='col-start-2 px-5' headings={headings} />
    <SideToc client:load className='col-start-1' headings={headings} />
    <article
      class='col-start-2 prose prose-sm md:prose-base max-w-none dark:prose-invert prose-zinc prose-code:text-xs md:prose-code:text-sm prose-inline-code:before:content-[""] prose-inline-code:after:content-[""] prose-inline-code:text-xs md:prose-inline-code:text-sm prose-inline-code:font-normal prose-inline-code:px-1.5 prose-inline-code:py-1 prose-inline-code:bg-muted prose-inline-code:rounded-md prose-a:mx-1.5 prose-a:text-[#B2E6C8] prose-headings:scroll-mt-20 [&>:first-child>*]:mt-0'
    >
      <Content />
    </article>
    <PostNavigation
      className='col-start-2 px-5'
      client:load
      previousPost={prevPost}
      nextPost={nextPost}
    />
    <ScrollToTopButton client:load className='fixed bottom-5 right-5' />
  </section>
</Layout>
